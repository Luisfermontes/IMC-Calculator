<script>

    function saltarlinea(){

        document.write("<br")
        document.write("<br")
        document.write("<br")
    }

    function imprimir(frase){

        document.write(frase)
        saltarlinea()

    }

    var anomundial=1930
    var limite=parseInt(prompt("Ingrese el limite para calcular "))


    while (anomundial <= limite){

        imprimir("Hubo mundial de FIFA en el aÃ±o " + anomundial)
        anomundial = anomundial + 4
    
    }
    imprimir("fin")


</script>
